# ~/.offlineimaprc
[general]
ui = ttyui
pythonfile = ~/scripts/myscripts/getpwd.py
accounts = Gmail,Uni 
#,Work

maxsyncaccounts = 3
# Controls how many accounts may be synced simultaneously

# quick = 10
# Number of quick-syncs between autorefreshes. Quick-syncs do not update if the
# only changes were to IMAP flags


################# Accounts ---

[Account Gmail]
localrepository = Gmail-Local
remoterepository = Gmail-Remote
status_backend = sqlite
# Status cache. Default is plain, which eventually becomes huge and slow.
autorefresh = 5
# duration in minutes between two runs


[Account Uni]
localrepository = Uni-Local
remoterepository = Uni-Remote
status_backend = sqlite

autorefresh = 8

# [Account Work]
# localrepository = Work-Local
# remoterepository = Work-Remote

################ Local Repositories ---

[Repository Gmail-Local]
type = Maildir
localfolders = ~/Mail/Gmail
nametrans = lambda folder: {'gmail_drafts':  '[Gmail]/Drafts',
                            'gmail_sent':    '[Gmail]/Sent Mail',
                            'gmail_starred': '[Gmail]/Starred',
                            'gmail_trash':   '[Gmail]/Trash',
			    'gmail_spam':    '[Gmail]/Spam',
                            }.get(folder, folder)
# holdconnectionopen = yes

[Repository Uni-Local]
type = Maildir
localfolders = ~/Mail/Uni

# [Repository Work-Local]
# type = Maildir
# localfolders = ~/Mail/Work

################ Remote Repositories ---

[Repository Gmail-Remote]
type = Gmail
remoteuser = makmiller@gmail.com
remotepasseval = getpwd("makmiller")

realdelete = yes

nametrans = lambda folder: {'[Gmail]/Drafts':    'gmail_drafts',
                            '[Gmail]/Sent Mail': 'gmail_sent',
                            '[Gmail]/Starred':   'gmail_starred',
                            '[Gmail]/Trash':     'gmail_trash',
                            '[Gmail]/Spam':      'gmail_spam',
                            }.get(folder, folder)

folderfilter = lambda foldername: foldername not in ['[Gmail]/All Mail', '[Gmail]/Important']
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

# Instead of closing the connection once a sync is complete, offlineimap will
# send empty data to the server to hold the connection open. A value of 60
# attempts to hold the connection for a minute between syncs (both quick and
# autorefresh)
# keepalive = 60

[Repository Uni-Remote]
type = IMAP
remotehost = imap.ucalgary.ca
remoteport = 143
ssl = no
remoteuser = mmpedros
remotepasseval = getpwd("mmpedros")
realdelete = yes
# sslcacertfile = /etc/ssl/certs/certificado.pem
# cert_fingerprint = '9f04f064b8f90c7ceb899be914ce6f3f12634bbb'

