[Repository TU-Remote]
type = IMAP
remotehost = outlook.towson.edu
ssl = yes
remoteport = 993
remoteuser = towsonu\mpedroso
remotepasseval = getpwd("towson")
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

